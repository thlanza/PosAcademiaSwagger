        "/modalidades": {
            "get": {
                "description": "Recuperando todas as modalidades",
                "summary": "Esta rota recupera todas as modalidades armazenadas",
                "tags": ["Modalidade"],
                "security": [{ "bearerAuth": [] }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Modalidade"
                                    }                       
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "Criando uma modalidade",
                "summary": "Esta rota cria uma modalidade e a armazena.",
                "tags": ["Modalidade"],
                "security": [{ "bearerAuth": [] }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Modalidade"                      
                                }
                            }
                        }
                    }
                },
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Modalidade"
                            },
                            "examples": {
                                "aluno": {
                                    "value": {
                                        "nomeModalidade": "Natação",
                                        "horario": "10:30",
                                        "dias": ["Terça", "Quinta"]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/modalidades/{id}": {
            "get": {
                "description": "Busca de uma modalidade pelo id",
                "summary": "Busca de uma modalidade pelo id",
                "tags": ["Modalidade"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                    "name": "id",
                    "in": "path",
                    "description": "Nome do produto pelo id",
                    "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Modalidade"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "description": "Alterar uma modalidade pelo id",
                "summary": "Alterar uma modalidade pelo id",
                "tags": ["Modalidade"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                    "name": "id",
                    "in": "path",
                    "description": "Nome do produto pelo id",
                    "required": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Modalidade"
                            },
                            "examples": {
                                "product": {
                                    "value": {
                                        "nomeModalidade": "Musculação Pesada",
                                        "horario": "18:30",
                                        "dias": ["Quarta", "Sexta"]
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Modalidade"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "description": "Deletar uma modalidade pelo id",
                "summary": "Deletar uma modalidade pelo id",
                "tags": ["Modalidade"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                    "name": "id",
                    "in": "path",
                    "description": "Nome do produto pelo id",
                    "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },

    "components": {
        "schemas": {
            "Modalidade": {
                "type": "object",
                "properties": {
                    "nomeModalidade": {
                        "type": "string"
                    },
                    "horario": {
                        "type": "string"
                    },
                    "dias": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "dataDeCriacao": {
                        "type": "string",
                        "format": "date"
                    }
                }
            },
            "Comprovante": {
                "type": "object",
                "properties": {
                    "idAluno": {
                        "type": "string"
                    },
                    "urlFoto": {
                        "type": "string"
                    },
                    "mes": {
                        "type": "string"
                    },
                    "ano": {
                        "type": "string"
                    }
                }
            },
            "AdminCadastro": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string",
                        "format": "password"
                    },
                    "primeiroNome": {
                        "type": "string"
                    },
                    "sobrenome": {
                        "type": "string"
                    },
                    "fotoDePerfil": {
                        "type": "string"
                    }
                }   
            },
            "AlunoCadastro": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string",
                        "format": "password"
                    },
                    "primeiroNome": {
                        "type": "string"
                    },
                    "sobrenome": {
                        "type": "string"
                    },
                    "fotoDePerfil": {
                        "type": "string"
                    },
                    "modalidade":{
                        "type": "string"
                    },
                    "inadimplente": {
                        "type": "boolean"
                    },
                    "mesesInadimplente": {
                        "type": "number"
                    }
                }  
            },
            "UserLogin": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string",
                        "format": "password"
                    }
                }
            },
            
            "UserResponse": {
                "type": "object",
                "properties": {
                    "access_token": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}